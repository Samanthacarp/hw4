<h1><%= @place["name"] %></h1>

<h2>My Entries</h2>
<% for entry in @entries %>
  <h3><%= entry["title"] %></h3>
  <h4><%= entry["occurred_on"] %></h4>
  <p><%= entry["description"] %></p>
<% end %>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>">New Entry</a>
</p>

<p>
  <a href="/places">Back to All Places</a>
</p>

<% User.find_by({ "id" => session["user_id"] }) != nil %>
  <p><a href="/places/<%= @place["id"] %>/edit">Edit Place</a></p>

  <form action="/places/<%= @place["id"] %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <button>Delete Place</button>
  </form>
